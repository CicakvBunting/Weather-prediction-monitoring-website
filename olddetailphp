// }



$today = date('Y-m-d');
// Calculate yesterday's date
$yesterday = date('Y-m-d', strtotime('-1 day'));

// Calculate 2 days before
$twoDaysBefore = date('Y-m-d', strtotime('-2 days'));

// Calculate 3 days before
$threeDaysBefore = date('Y-m-d', strtotime('-3 days'));

// Calculate 4 days before
$fourDaysBefore = date('Y-m-d', strtotime('-4 days'));



// SQL query to retrieve data for yesterday, sorted by datetime
$yesterdayQuery = "SELECT * FROM data_baru WHERE DATE(datetime) = '" . $yesterday . "' ORDER BY datetime";

// SQL query to retrieve data for 2 days before, sorted by datetime
$twoDaysBeforeQuery = "SELECT * FROM data_baru WHERE DATE(datetime) = '" . $twoDaysBefore . "' ORDER BY datetime";

// SQL query to retrieve data for 3 days before, sorted by datetime
$threeDaysBeforeQuery = "SELECT * FROM data_baru WHERE DATE(datetime) = '" . $threeDaysBefore . "' ORDER BY datetime";

// SQL query to retrieve data for 4 days before, sorted by datetime
$fourDaysBeforeQuery = "SELECT * FROM data_baru WHERE DATE(datetime) = '" . $fourDaysBefore . "' ORDER BY datetime";

// Execute the query for yesterday and get the result set
$yesterdayResult = $conn->query($yesterdayQuery);

// Execute the query for 2 days before and get the result set
$twoDaysBeforeResult = $conn->query($twoDaysBeforeQuery);

// Execute the query for 3 days before and get the result set
$threeDaysBeforeResult = $conn->query($threeDaysBeforeQuery);

// Execute the query for 4 days before and get the result set
$fourDaysBeforeResult = $conn->query($fourDaysBeforeQuery);

// Initialize arrays to hold the data for yesterday
$yesterdayDatetime = $yesterdaySolarirradiance = $yesterdayRelativetemperature = $yesterdayRelativehumidity = $yesterdayWindspeed = $yesterdaySurfacetemperaturearray = $yesterdaySurfacetemperatureweather = array();

// Loop through each row of data for yesterday
while ($row = $yesterdayResult->fetch_assoc()) {
    // Access individual columns of the row
    $yesterdayDatetime[] = $row['datetime'];
    $yesterdaySolarirradiance[] = $row['solarirradiance'];
    $yesterdayRelativetemperature[] = $row['relativetemperature'];
    $yesterdayRelativehumidity[] = $row['relativehumidity'];
    $yesterdayWindspeed[] = $row['windspeed'];
    $yesterdaySurfacetemperaturearray[] = $row['surfacetemperaturearray'];
    $yesterdaySurfacetemperatureweather[] = $row['surfacetemperatureweather'];
}

// Initialize arrays to hold the data for 2 days before
$twoDaysBeforeDatetime = $twoDaysBeforeSolarirradiance = $twoDaysBeforeRelativetemperature = $twoDaysBeforeRelativehumidity = $twoDaysBeforeWindspeed = $twoDaysBeforeSurfacetemperaturearray = $twoDaysBeforeSurfacetemperatureweather = array();

// Loop through each row of data for 2 days before
while ($row = $twoDaysBeforeResult->fetch_assoc()) {
    // Access individual columns of the row
    $twoDaysBeforeDatetime[] = $row['datetime'];
    $twoDaysBeforeSolarirradiance[] = $row['solarirradiance'];
    $twoDaysBeforeRelativetemperature[] = $row['relativetemperature'];
    $twoDaysBeforeRelativehumidity[] = $row['relativehumidity'];
    $twoDaysBeforeWindspeed[] = $row['windspeed'];
    $twoDaysBeforeSurfacetemperaturearray[] = $row['surfacetemperaturearray'];
    $twoDaysBeforeSurfacetemperatureweather[] = $row['surfacetemperatureweather'];
}

// Initialize arrays to hold the data for 3 days before
$threeDaysBeforeDatetime = $threeDaysBeforeSolarirradiance = $threeDaysBeforeRelativetemperature = $threeDaysBeforeRelativehumidity = $threeDaysBeforeWindspeed = $threeDaysBeforeSurfacetemperaturearray = $threeDaysBeforeSurfacetemperatureweather = array();

// Loop through each row of data for 3 days before
while ($row = $threeDaysBeforeResult->fetch_assoc()) {
    // Access individual columns of the row
    $threeDaysBeforeDatetime[] = $row['datetime'];
    $threeDaysBeforeSolarirradiance[] = $row['solarirradiance'];
    $threeDaysBeforeRelativetemperature[] = $row['relativetemperature'];
    $threeDaysBeforeRelativehumidity[] = $row['relativehumidity'];
    $threeDaysBeforeWindspeed[] = $row['windspeed'];
    $threeDaysBeforeSurfacetemperaturearray[] = $row['surfacetemperaturearray'];
    $threeDaysBeforeSurfacetemperatureweather[] = $row['surfacetemperatureweather'];
}

// Initialize arrays to hold the data for 4 days before
$fourDaysBeforeDatetime = $fourDaysBeforeSolarirradiance = $fourDaysBeforeRelativetemperature = $fourDaysBeforeRelativehumidity = $fourDaysBeforeWindspeed = $fourDaysBeforeSurfacetemperaturearray = $fourDaysBeforeSurfacetemperatureweather = array();

// Loop through each row of data for 4 days before
while ($row = $fourDaysBeforeResult->fetch_assoc()) {
    // Access individual columns of the row
    $fourDaysBeforeDatetime[] = $row['datetime'];
    $fourDaysBeforeSolarirradiance[] = $row['solarirradiance'];
    $fourDaysBeforeRelativetemperature[] = $row['relativetemperature'];
    $fourDaysBeforeRelativehumidity[] = $row['relativehumidity'];
    $fourDaysBeforeWindspeed[] = $row['windspeed'];
    $fourDaysBeforeSurfacetemperaturearray[] = $row['surfacetemperaturearray'];
    $fourDaysBeforeSurfacetemperatureweather[] = $row['surfacetemperatureweather'];
}

// Sort the arrays based on datetime for yesterday
array_multisort($yesterdayDatetime, $yesterdaySolarirradiance, $yesterdayRelativetemperature, $yesterdayRelativehumidity, $yesterdayWindspeed, $yesterdaySurfacetemperaturearray, $yesterdaySurfacetemperatureweather);

// Sort the arrays based on datetime for 2 days before
array_multisort($twoDaysBeforeDatetime, $twoDaysBeforeSolarirradiance, $twoDaysBeforeRelativetemperature, $twoDaysBeforeRelativehumidity, $twoDaysBeforeWindspeed, $twoDaysBeforeSurfacetemperaturearray, $twoDaysBeforeSurfacetemperatureweather);

// Sort the arrays based on datetime for 3 days before
array_multisort($threeDaysBeforeDatetime, $threeDaysBeforeSolarirradiance, $threeDaysBeforeRelativetemperature, $threeDaysBeforeRelativehumidity, $threeDaysBeforeWindspeed, $threeDaysBeforeSurfacetemperaturearray, $threeDaysBeforeSurfacetemperatureweather);

// Sort the arrays based on datetime for 4 days before
array_multisort($fourDaysBeforeDatetime, $fourDaysBeforeSolarirradiance, $fourDaysBeforeRelativetemperature, $fourDaysBeforeRelativehumidity, $fourDaysBeforeWindspeed, $fourDaysBeforeSurfacetemperaturearray, $fourDaysBeforeSurfacetemperatureweather);

// Close the database connection

//global solar atlas data

// SQL query to retrieve data for yesterday, sorted by datetime
$yesterdayQuery = "SELECT * FROM data_global_atlas WHERE DATE(datetime) = '" . $yesterday . "' ORDER BY datetime";

// SQL query to retrieve data for 2 days before, sorted by datetime
$twoDaysBeforeQuery = "SELECT * FROM data_global_atlas WHERE DATE(datetime) = '" . $twoDaysBefore . "' ORDER BY datetime";

// SQL query to retrieve data for 3 days before, sorted by datetime
$threeDaysBeforeQuery = "SELECT * FROM data_global_atlas WHERE DATE(datetime) = '" . $threeDaysBefore . "' ORDER BY datetime";

// SQL query to retrieve data for 4 days before, sorted by datetime
$fourDaysBeforeQuery = "SELECT * FROM data_global_atlas WHERE DATE(datetime) = '" . $fourDaysBefore . "' ORDER BY datetime";

// Execute the query for yesterday and get the result set
$yesterdayResult = $conn->query($yesterdayQuery);

// Execute the query for 2 days before and get the result set
$twoDaysBeforeResult = $conn->query($twoDaysBeforeQuery);

// Execute the query for 3 days before and get the result set
$threeDaysBeforeResult = $conn->query($threeDaysBeforeQuery);

// Execute the query for 4 days before and get the result set
$fourDaysBeforeResult = $conn->query($fourDaysBeforeQuery);

// Initialize arrays to hold the data for yesterday
$yesterdayDatetimeGlobal = $yesterdaySolarirradianceGlobal = $yesterdayRelativetemperatureGlobal = $yesterdayRelativehumidityGlobal = $yesterdayWindspeedGlobal = $yesterdaySurfacetemperaturearrayGlobal = $yesterdaySurfacetemperatureweatherGlobal = array();

