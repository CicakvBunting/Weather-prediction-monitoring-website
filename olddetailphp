<?php
include("database/connection.php");
include("database/functions.php");
//all four days query data
// $allQuery = "SELECT * FROM `data_baru` WHERE `datetime` BETWEEN CURDATE() - INTERVAL 4 DAY AND CURDATE()";
// $allResult = $conn->query($allQuery);

// Initialize arrays to hold the data for yesterday
// Initialize arrays to hold the data for all
// $allDatetime = $allSolarirradiance = $allRelativetemperature = $allRelativehumidity = $allWindspeed = $allSurfacetemperaturearray = $allSurfacetemperatureweather = array();

// Loop through each row of data for yesterday
// while ($row = $allResult->fetch_assoc()) {
//     // Access individual columns of the row
//     $allDatetime[] = $row['datetime'];
//     $allSolarirradiance[] = $row['solarirradiance'];
